{{define "admin_home_navigation"}}
  <table class="admin_table">
    {{range $item := .}}
      <tr>
        <td>
          <b>{{$item.Name}}</b> ({{$item.Count}}x)
        </td>
        <td>
          <div class="btngroup">
            {{range $action := $item.Actions}}
              <a class="btn" href="{{$action.Url}}">{{$action.Name}}</a>
            {{end}}
          </div>
        </td>
      </tr>
    {{end}}
  </table>
{{end}}