{{define "admin_layout_nologin"}}

<!-- TODO: locale, join with admin_layout.tmpl -->
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{.admin_title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/admin/prago_admin_files/prago.css?v={{.version}}">
    <script type="text/javascript" src="/admin/prago_admin_files/prago.js?v={{.version}}"></script>

  </head>
  <body class="admin_nologin">
    {{if .admin_has_logo}}
      <div class="admin_nologin_logo" style="background-image: url('/admin/logo');"></div>
    {{end}}

    {{if .admin_page}}
      {{template "admin_tabs" .admin_page.Navigation.Tabs}}
    {{end}}

    {{template "notification_center" .}}
    {{tmpl .admin_yield .}}
  </body>
</html>

{{end}}