{{define "admin_form"}}

  <form method="POST" action="{{.Form.Action}}" class="form{{range $class := .Classes}} {{$class}}{{end}}{{if .Form.AJAX}} form-ajax{{end}}" enctype="multipart/form-data" novalidate>
    {{if .CSRFToken}}
      <input type="hidden" name="_csrfToken" value="{{.CSRFToken}}">
    {{end}}

    {{if .Title}}
      <h1>{{.Title}}</h1>
    {{end}}

    <div class="form_errors hidden">

    </div>

    {{if false}}
      <div class="form_errors">
        {{range $error := .Errors}}
          <div class="form_errors_error">{{$error}}</div>
        {{end}}
      </div>
    {{end}}

    {{range $item := .Items}}
      <div class="form_label{{if .Hidden}} form_label-hidden{{end}}{{if .Errors}} form_label-errors{{end}}{{if .Required}} form_label-required{{end}}" data-id="{{.ID}}">
        {{if eq .HiddenName false}}
          <label for="{{.UUID}}" class="form_label_text">{{.NameHuman}}</label>
        {{end}}
        <div class="form_label_errors hidden">
          <!--<div class="form_label_errors_error"></div>-->
        </div>
        <div>
          {{tmpl $item.Template $item}}
        </div>
      </div>
    {{end}}

    <progress class="progress form_progress hidden"></progress>

  </form>

{{end}}