{{define "admin_home_navigation"}}
  <div class="admin_home">

  {{template "searchbox" ""}}

  {{range $section := .Sections}}
    <div class="admin_home_section">
      <h2 class="admin_home_section_name">{{$section.Name}}</h2>
      <div class="admin_home_items">
        {{range $item := $section.Items}}
            {{if $item.URL}}
              <a href="{{$item.URL}}" class="admin_home_item{{if $item.IsRed}} admin_home_item-red{{end}}{{if $item.IsGreen}} admin_home_item-green{{end}}">
            {{else}}
              <div class="admin_home_item{{if $item.IsRed}} admin_home_item-red{{end}}{{if $item.IsGreen}} admin_home_item-green{{end}}">
            {{end}}
              {{if $item.Icon}}
                <div class="admin_home_item_icon"><img src="/admin/api/icons?file={{$item.Icon}}&color=4078c0"></div>
              {{end}}
              <div class="admin_home_item_name">{{$item.Name}}</div>
              {{if $item.Value}}
                <div class="admin_home_item_value">{{$item.Value}}</div>
              {{end}}
              {{if $item.Description}}
                <div class="admin_home_item_description">{{$item.Description}}</div>
              {{end}}
            {{if $item.URL}}
              </a>
            {{else}}
              </div>
            {{end}}
        {{end}}
      </div>
      {{if $section.HasTable}}
        <div class="admin_home_table" data-uuid="{{$section.UUID}}"><progress class="progress"></progress></div>
      {{end}}
      {{if $section.Tasks}}
        {{template "admin_tasks" $section.Tasks}}
      {{end}}
    </div>
  {{end}}
  <div>
{{end}}