{{define "menu"}}
    <div class="menu">
        <div class="menu_section">
            {{template "menu_items" .Items}}
        </div>
        <div class="menu_footer">
            <div>{{.Username}}</div>
            <div>{{.Email}}</div>
            <div {{if .RoleWarning}}class="menu_footer_item-warning"{{end}}>{{.Role}}</div>
            <div>{{.LanguageDecription}}</div>
            <div>{{.Version}}</div>
        </div>
    </div>
{{end}}

{{define "menu_items"}}
    <div class="menu_section_content">
    {{range $item := .}}
        <div class="menu_row{{if $item.Subitems}} menu_row-subitems{{end}}{{if $item.IsSelectedOrExpanded}} menu_row-expanded{{end}}">
            <div class="menu_row_icon">
                <img src="/admin/api/icons?file=glyphicons-basic-175-play.svg&color=dddddd" class="menu_row_icon_img">
            </div>
            <div class="menu_row_content">
                <a href="{{$item.URL}}" class="menu_item{{if $item.Selected}} menu_item-selected{{end}}">
                    {{if $item.Icon}}
                        <img class="menu_item_icon" src="/admin/api/icons?file={{$item.Icon}}&color={{if $item.Selected}}ffffff{{else}}444444{{end}}">
                    {{end}}
                    <div class="menu_item_left">{{$item.Name}}</div>
                    <div class="menu_item_right"></div>
                </a>
                {{if $item.Subitems}}
                    {{template "menu_items" $item.Subitems}}
                {{end}}
            </div>
        </div>
    {{end}}
    </div>
{{end}}